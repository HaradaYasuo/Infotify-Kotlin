<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="190dp">

    <FrameLayout
        android:id="@+id/frame_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/md_white_1000"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:id="@+id/news_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_toStartOf="@id/image_news">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/icon_info"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/icon_info"
                    app:civ_circle_background_color="#5F7D95"
                    android:layout_marginEnd="10dp"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="1dp"
                    />

                <TextView
                    android:id="@+id/text_name_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BBC News"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_toEndOf="@id/icon_info"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>



            <ImageView
                android:id="@+id/image_news"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/sample_image"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_below="@id/layout_info"
                android:layout_toStartOf="@id/image_news"
                android:ellipsize="end"
                android:maxLines="2"
                fontPath="fonts/SF-Medium.otf"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="12sp"
                android:layout_below="@id/text_title"
                android:layout_toStartOf="@id/image_news"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginStart="10dp"/>



        </RelativeLayout>


    </FrameLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="40dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:layout_marginTop="-20dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:textSize="8sp"
                    app:chipBackgroundColor="#d4DBE9"
                    android:textColor="#afb5CA"/>

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trending"
                    android:textSize="8sp"
                    app:chipBackgroundColor="#d4DBE9"
                    android:textColor="#afb5CA"/>


            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">


                <com.sackcentury.shinebuttonlib.ShineButton
                    android:id="@+id/btnBookmark"
                    android:layout_height="26dp"
                    android:layout_width="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    app:siShape="@drawable/ic_bookmark_gray_24dp"
                    app:btn_fill_color="@color/colorPrimary"
                    app:btn_color="@color/darker_gray"
                    app:small_shine_color="@color/md_red_400"/>

                <ImageView
                    android:id="@+id/btnShare"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_share_gray_24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
